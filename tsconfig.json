{
	"compilerOptions": {
		"target": "ES6",
		"module": "NodeNext",
		"declaration": true,
		"outDir": "./lib",
		"strict": true,
		"esModuleInterop": true,
		"baseUrl": "./src",
		"inlineSourceMap": true,
		"inlineSources": true,
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "nodenext",
		"importHelpers": true,
		"strictNullChecks": true,
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7"
		],
	},
	"include": [
		"src/**/*.ts"
	]
}